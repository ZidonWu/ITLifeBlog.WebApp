@using UI.Web.Areas.Admin.Models
@model CategoryViewModel

<!-- Main Content -->
<div class="container-fluid">
    <div class="side-body">
        <div class="page-title">
            <span class="title">CategoryAdd</span>
            <div class="description"></div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <div class="title">CategoryAdd form</div>
                        </div>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("CategoryAdd", "Category", FormMethod.Post, new { @class = "margin-bottom-0", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="inputName">Name</label>
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "inputName", placeholder = "Name" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="inputDescription">Description</label>
                                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", id = "inputDescription", placeholder = "Description" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="inputDescription">Order</label>
                                @Html.TextBoxFor(m => m.Order, new { @class = "form-control", id = "inputDescription", placeholder = "Order" })
                                @Html.ValidationMessageFor(model => model.Order, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Add</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
