@using UI.Web.Areas.Admin.Models
@model AccountViewModel

<!-- Main Content -->
<div class="container-fluid">
    <div class="side-body">
        <div class="page-title">
            <span class="title">UpdatePassword</span>
            <div class="description"></div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">
                            <div class="title">UpdatePassword form</div>
                        </div>
                    </div>
                    <div class="card-body">
                        @using (Html.BeginForm("UpdatePassword", "Account", FormMethod.Post, new { @class = "margin-bottom-0", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label for="inputNewPassword">NewPassword</label>
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", id = "inputNewPassword", placeholder = "NewPassword" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-default">Update</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
