<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITLifeBlog</title>

    <link href="~/Src/Web/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Src/Web/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Src/Web/css/pace.css" rel="stylesheet" />
    <link href="~/Src/Web/css/custom.css" rel="stylesheet" />


</head>
<body>
    @Html.Partial("_HeaderPartial")

    @RenderBody()

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <p class="copyright">&copy; @DateTime.Now.Year - ITLifeBlog<span> | </span><a href="http://www.miitbeian.gov.cn/" style="color:#919497;">沪ICP备16047615号</a></p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Mobile Menu -->
    <div class="overlay overlay-hugeinc">
        <button type="button" class="overlay-close"><span class="ion-ios-close-empty"></span></button>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index","Home",new { Areas = "Web" })">Home</a></li>
                <li><a href="@Url.Action("Index","Article",new { Areas = "Web" })">Article</a></li>
                <li><a href="@Url.Action("About","Home",new { Areas = "Web" })">About</a></li>
            </ul>
        </nav>
    </div>

    <script src="~/Src/Web/js/jquery-2.1.3.min.js"></script>
    <script src="~/Src/Web/js/bootstrap.min.js"></script>
    <script src="~/Src/Web/js/modernizr.custom.js"></script>
    <script src="~/Src/Web/js/pace.min.js"></script>
    <script src="~/Src/Web/js/script.js"></script>
</body>
</html>